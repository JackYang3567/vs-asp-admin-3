@{
    Layout = null;
    Game.Entity.NativeWeb.ConfigInfo config = ViewData["data"] == null ? null : ViewData["data"] as Game.Entity.NativeWeb.ConfigInfo;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script> 
</head>
<body>
    <div id="content" class="main-content">
        <div class="carousel box-inner">
            <div class="box-header well clearfix" data-original-title="">
                <h2><i class="glyphicon glyphicon-hand-right"></i>目前操作功能：@ViewBag.Title</h2>
            </div>
            @Html.HtmlWebConfigMuneBuilder((int)ViewBag.IntParam)
            <div class="tab-content" style="margin-top:-11px">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@ViewBag.Title</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">键名：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtConfigKey" class="form-control input-sm" readonly="readonly" value="@(config != null ? config.ConfigKey : "")"/>
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">
                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">名称：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtConfigName" class="form-control input-sm" readonly="readonly" value="@(config != null ? config.ConfigName : "")" />
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段说明：</div>
                            <div class="col-xs-6 col-md-3">
                                <textarea class="form-control input-sm" id="txtConfigString" rows="5">@(config != null ? config.ConfigString : "")</textarea>
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段1：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField1" class="form-control input-sm" value="@(config != null ? config.Field1 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段2：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField2" class="form-control input-sm" value="@(config != null ? config.Field2 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段3：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField3" class="form-control input-sm" value="@(config != null ? config.Field3 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-3" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段4：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField4" class="form-control input-sm" value="@(config != null ? config.Field4 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-4" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段5：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField5" class="form-control input-sm" value="@(config != null ? config.Field5 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-4" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段6：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField6" class="form-control input-sm" value="@(config != null ? config.Field6 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-4" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段7：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField7" class="form-control input-sm" value="@(config != null ? config.Field7 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-4" style="text-align:left">

                            </div>
                        </div>
                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                            <div class="col-xs-2 col-md-2" style="text-align:right">字段8：</div>
                            <div class="col-xs-6 col-md-3">
                                <input type="text" id="txtField8" class="form-control input-sm" value="@(config != null ? config.Field8 : "")" />
                            </div>
                            <div class="col-xs-5 col-md-4" style="text-align:left">

                            </div>
                        </div>
                    </div>

                    <ul class="list-group">
                        <li class="list-group-item">
                            <ul class="list-inline">
                                <li></li>
                                <li><a class="btn btn-primary search btn-md" href="#" id="btn"><i class="glyphicon glyphicon-save"></i>保存</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            docReady();
        });
        function docReady() {
            $("#btn").click(function (e) {
                e.preventDefault();
                add();
            });
        }
        function add() {
            var data = {};
            var ConfigID = parseInt('@ViewBag.IntParam');
            if (ConfigID < 1) {
                alert("参数有误！");
                return false;
            }
            data.ConfigID = ConfigID;
            var ConfigKey = $("#txtConfigKey").val().trim();
            data.ConfigKey = ConfigKey;
            var ConfigName = $("#txtConfigName").val().trim();
            data.ConfigName = ConfigName;
            var ConfigString = $("#txtConfigString").val().trim();
            data.ConfigString = ConfigString;
            var Field1 = $("#txtField1").val().trim();
            data.Field1 = Field1;
            var Field2 = $("#txtField2").val().trim();
            data.Field2 = Field2;
            var Field3 = $("#txtField3").val().trim();
            data.Field3 = Field3;
            var Field4 = $("#txtField4").val().trim();
            data.Field4 = Field4;
            var Field5 = $("#txtField5").val().trim();
            data.Field5 = Field5;
            var Field6 = $("#txtField6").val().trim();
            data.Field6 = Field6;
            var Field7 = $("#txtField7").val().trim();
            data.Field7 = Field7;
            var Field8 = $("#txtField8").val().trim();
            data.Field8 = Field8;
            AjaxSubmit("/Web/DoSiteConfig", data, callBack, "del");
        }
        //回调函数
        function callBack(jsonData, fname) {
            switch (fname) {
                case "del":
                    alert(jsonData.Msg);
                    window.location.reload();
                    //window.opener.location.reload();
                    break;
            }
        }
    </script>
</body>
</html>
