@{
    Layout = null;
    ViewBag.Title = "后台管理-欢迎页面";
    System.Data.DataTable dt = ViewData["data"] == null ? null : ViewData["data"] as System.Data.DataTable;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div id="content" class="main-content">
        <div class="">
            <div class="carousel box-inner">   
                @if ((int)ViewBag.RoleID == 1)
                {
                    <div class="tab-content" style="margin-top:1rem;">
                        <!--统计内容开始-->
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">平台信息</h3>
                                    </div>
                                    <div class="panel-body main-div-padding-0 main-min-height">
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">今日充值额度：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["tdFillRMB"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">彩票盈利额度：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ?  dt.Rows[0]["lotterywinamount"]  : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">今日盈利额度：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["profitamount"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">当前在线人数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["onlinePlayer"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">今日交易总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["tdAppSc"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">系统今日抽水总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["tdTotalRevenue"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;color:red;">代理商今日抽水总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;color:red;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["tdrealRev"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">新增玩家人数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["tdRegNum"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">注册玩家总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["playerNum"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">代理总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["agentNum"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">玩家携带金币总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["playerSc"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">玩家银行存款总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["playerIn"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">玩家金币交易总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["AppSc"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">代理金币总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["agentSc"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">系统抽水总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["TotalRevenue"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">代理商抽水总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["realRev"]) : 0)</label></div>
                                        </div>

                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">代理结算金币总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["AppjsSc"]) : 0)</label></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">机器人信息</h3>
                                    </div>
                                    <div class="panel-body main-div-padding-0 main-min-height">
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">机器人总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["AndroidNum"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">在线机器人总数：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[0]["onlineAndroid"]) : 0)</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">机器人金币总量：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">0</label></div>
                                        </div>
                                        <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">总充值：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["FillRMB"]) : 0)RMB</label></div>
                                        </div>
                                        <div class="row" style="margin-top: 5px; margin-bottom: 5px;">
                                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-6" style="text-align:right;">房间损耗：</div>
                                            <div class="col-xs-4 col-sm-4 col-md-6 col-lg-6"><label style="text-align:left;">@((dt != null && dt.Rows.Count > 0) ? Game.Facade.Tools.TypeUtil.ObjectToDecimal(dt.Rows[0]["AndroidLost"]) : 0)</label></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row" style="height:50px; text-align:center; vertical-align:middle;">
                            <a id="btnQuery" class="btn btn-success search" href="#" onclick="history.go(0);"><i class="glyphicon glyphicon-zoom-in icon-white"></i>立即更新</a>
                        </div>
                        <!--统计内容结束-->
                    </div>
                }
                else
                {
                    <h3 style="width: 100%;line-height: 600px;font-size: 34px;color: #ff0000;text-align:center;">欢迎登录后台管理系统！</h3>
                }
            </div>
        </div>
    </div>
</body>
</html>
