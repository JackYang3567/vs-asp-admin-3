@{
    Layout = null;
    ViewBag.Title = "系统维护 - 推广管理";
    Game.Entity.Treasure.GlobalSpreadInfo globalSpareadInfo = ViewData["data"] == null ? null : ViewData["data"] as Game.Entity.Treasure.GlobalSpreadInfo;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
</head>
<body>
    <div id="content" class="main-content">
        <div class="">
            <div class="carousel box-inner">
                <div class="box-header well clearfix" data-original-title="">
                    <h2><i class="glyphicon glyphicon-hand-right"></i>目前操作功能：@ViewBag.Title</h2>
                </div>
                <ul class="media nav nav-tabs margin-b-10">
                    <li class="active">
                        <a href="@Url.Action("SpreadSet", "App")" title="">推广管理</a>
                    </li>
                    <li>
                        <a href="@Url.Action("SpreadManager", "App")">推广明细</a>
                    </li>
                    <li>
                        <a href="@Url.Action("FinanceInfo", "App")">财务明细</a>
                    </li>

                </ul>
                <div class="tab-content" style="margin-top:-11px">

                    <div class="panel panel-info">

                        <div class="panel-heading">
                            <h3 class="panel-title">注册赠送</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">游戏币：</div>
                                <div class="col-xs-6 col-md-3">
                                    <input id="txtRegGrantScore" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="10" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? globalSpareadInfo.RegisterGrantScore.ToString() : "0")">
                                </div>
                                <div class="col-xs-4 col-md-2" style="text-align:left">
                                   <label>不能为空，只能填写数字，范围为0-2147483647</label>
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right"></div>
                                <div class="col-xs-6 col-md-3">
                                    <label>游戏时长赠送（属于一次性赠送，推荐设置108000）</label>
                                </div>
                                <div class="col-xs-4 col-md-2" style="text-align:left">
                                    
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">时长(秒)：</div>
                                <div class="col-xs-6 col-md-3"><input id="txtPlayTimeCount" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="10" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? globalSpareadInfo.PlayTimeCount.ToString() : "0")"></d></div>
                                <div class="col-xs-4 col-md-2" style="text-align:left"><label>不能为空，只能填写数字，范围为0-2147483647</label></div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">游戏币：</div>
                                <div class="col-xs-6 col-md-3"><input id="txtPlayTimeGrantScore" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="10" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? globalSpareadInfo.PlayTimeGrantScore.ToString() : "0")"></d></div>
                                <div class="col-xs-4 col-md-2" style="text-align:left"><label>不能为空，只能填写数字，范围为0-2147483647</label></div>
                            </div>

                        </div>

                        <div class="panel-heading">
                            <h3 class="panel-title">充值赠送</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">比率：</div>
                                <div class="col-xs-6 col-md-3">
                                    <input id="txtFillGrantRate" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="3" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? (globalSpareadInfo.FillGrantRate * 100).ToString() : "0")">
                                </div>
                                <div class="col-xs-5 col-md-3" style="text-align:left">
                                    <label>充值金额等价的游戏币数的比率，不能为空只能填写数字，范围为0-100</label>
                                </div>
                            </div>
                           

                        </div>
                        <div class="panel-heading">
                            <h3 class="panel-title">结算赠送</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">比率：</div>
                                <div class="col-xs-6 col-md-3">
                                    <input id="txtBalanceRate" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="3" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? (globalSpareadInfo.BalanceRate * 100).ToString() : "0")">
                                </div>
                                <div class="col-xs-5 col-md-3" style="text-align:left">
                                    <label>只能填写数字，范围为0-100</label>
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">最低值：</div>
                                <div class="col-xs-6 col-md-3">
                                    <input id="txtMinBalanceScore" style="width:350px;display:inline;" class="form-control input-sm" type="text" maxlength="10" onkeyup="if(isNaN(value))execCommand('undo');" value="@(globalSpareadInfo != null ? globalSpareadInfo.MinBalanceScore.ToString() : "0")">
                                </div>
                                <div class="col-xs-5 col-md-3" style="text-align:left">
                                    <label>只能填写数字，范围为0-2147483647</label>
                                </div>
                            </div>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <ul class="list-inline">
                                    <li><a class="btn btn-primary search btn-md" href="#" onclick="add();"><i class="glyphicon glyphicon-save"></i>保存</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script type="text/javascript">
        function add() {
            var data = {};
            var RegisterGrantScore = $("#txtRegGrantScore").val();
            if (RegisterGrantScore == "" || isNaN(RegisterGrantScore) || RegisterGrantScore < 0 || RegisterGrantScore > 2147483647) {
                alert("游戏币不能为空，只能填写数字，范围为0-2147483647");
                return false;
            }
            var PlayTimeCount = $("#txtPlayTimeCount").val();
            if (PlayTimeCount == "" || isNaN(PlayTimeCount) || PlayTimeCount < 0 || PlayTimeCount > 2147483647) {
                alert("时长(秒)不能为空，只能填写数字，范围为0-2147483647");
                return false;
            }
            var PlayTimeGrantScore = $("#txtPlayTimeGrantScore").val();
            if (PlayTimeGrantScore == "" || isNaN(PlayTimeGrantScore) || PlayTimeGrantScore < 0 || PlayTimeGrantScore > 2147483647) {
                alert("游戏币)不能为空，只能填写数字，范围为0-2147483647");
                return false;
            }
            var FillGrantRate = $("#txtFillGrantRate").val();
            if (FillGrantRate == "" || isNaN(FillGrantRate) || FillGrantRate < 0 || FillGrantRate > 100) {
                alert("比率不能为空只能填写数字，范围为0-100");
                return false;
            }
            var BalanceRate = $("#txtBalanceRate").val();
            if (BalanceRate == "" || isNaN(BalanceRate) || BalanceRate < 0 || BalanceRate > 100) {
                alert("结算赠送比率不能为空只能填写数字，范围为0-100");
                return false;
            }
            var MinBalanceScore = $("#txtMinBalanceScore").val();
            if (MinBalanceScore == "" || isNaN(MinBalanceScore) || MinBalanceScore < 0 || MinBalanceScore > 2147483647) {
                alert("最低值只能填写数字，范围为0-2147483647");
                return false;
            }
            data.RegisterGrantScore = RegisterGrantScore;
            data.PlayTimeCount = PlayTimeCount;
            data.PlayTimeGrantScore = PlayTimeGrantScore;
            data.FillGrantRate = FillGrantRate;
            data.BalanceRate = BalanceRate;
            data.MinBalanceScore = MinBalanceScore;
            AjaxSubmit("/App/DoSpreadSet", data, callBack, "add");
        }
        //回调函数
        function callBack(jsonData, fname) {
            switch (fname) {
                case "add":
                    alert(jsonData.Msg);
                    window.location.reload();
                    break;
            }
        }
    </script>
</body>
</html>
