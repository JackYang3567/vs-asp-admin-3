@{
    Layout = null;
    ViewBag.Title = "管理后台-日志信息";
    Game.Entity.PlatformManager.SystemSecurity dt = ViewData["data"] == null ? null : ViewData["data"] as Game.Entity.PlatformManager.SystemSecurity;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div id="content" class="main-content">
        <div class="">
            <div class="carousel box-inner">
                <div class="box-header well clearfix" data-original-title="">
                    <h2><i class="glyphicon glyphicon-hand-right"></i>目前操作功能：@ViewBag.Title</h2>
                </div>               
                <div class="tab-content" style="margin-top:0px">
                    <div class="panel panel-primary">
                       
                        <div class="panel-heading">
                            <h3 class="panel-title">操作日志信息</h3>
                        </div>
                        <div class="panel-body">
                            
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-3 col-md-1" style="text-align:right">操作帐号：</div>
                                <div class="col-xs-6 col-md-1"><label>@(dt != null ? dt.OperatingAccounts : "")</label></div>

                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-3 col-md-1" style="text-align:right">操作：</div>
                                <div class="col-xs-6 col-md-1"><label>@(dt != null ? dt.OperatingName : "")</label></div>

                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-3 col-md-1" style="text-align:right">操作IP：</div>
                                <div class="col-xs-6 col-md-3"><label>@(dt != null ? dt.OperatingIP : "")</label></div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-3 col-md-1" style="text-align:right">操作时间：</div>
                                <div class="col-xs-6 col-md-3"><label>@(dt != null ? dt.OperatingTime.ToString() : "")</label></div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-3 col-md-1" style="text-align:right">操作详情：</div>
                                <div class="col-xs-6 col-md-3"><textarea rows="10" class="form-control input-sm" style="width:400px;">@(dt != null ? dt.Remark.ToString() : "")</textarea></div>
                            </div>
                            
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <ul class="list-inline">
                                    <li><a class="btn btn-primary search btn-md" href="#" onclick="window.close();"><i class="glyphicon glyphicon-off"></i>关闭</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
   
</body>
</html>
