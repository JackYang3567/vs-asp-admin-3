@{
    Layout = null;
    ViewBag.Title = "管理后台-修改归属地";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
</head>
<body>
    <div id="content" class="main-content">
        <div class="">
            <div class="carousel box-inner">
                <div class="box-header well clearfix" data-original-title="">
                    <h2><i class="glyphicon glyphicon-hand-right"></i>目前操作功能：@ViewBag.Title</h2>
                </div>

                <div class="tab-content">
                    <div class="container tab-pane active" style="padding-top:10px;padding-bottom:10px;">
                        <form class="form-horizontal" role="form">
                            <div class="form-group new-input-style margin-b-0 clearfix">
                                <label class="pull-left control-label" style="text-align:right;"> 归属地：</label>
                                <div class="pull-left">
                                    <input id="txtIpAddress" class="form-control" type="text" value="" maxlength="11" placeholder="请输入归属地">
                                </div>
                            </div>
                            <div class="form-group new-input-style margin-b-0 clearfix" style="text-align:center">
                                    修改后重新登录游戏生效。为空将改回真实地址
                            </div>

                        </form>
                    </div>
                </div>
                <div class="footer-absolute">
                    <ul class="cursor-style clearfix new-add-btn" style="width:346px">
                        <li class="pull-left" style="margin-right: 10px;">
                            <a class="btn btn-success search btn-md" href="#" onclick="Add();"><i class="glyphicon glyphicon-send"></i>保存</a>
                        </li>
                        <li class="pull-left" style="margin-right: 10px;">
                            <a class="btn btn-success search btn-md" href="#" onclick="HuanYuan();"><i class="glyphicon glyphicon-send"></i>还原归属地</a>
                        </li>
                        <li class="pull-left">
                            <a class="btn btn-primary search btn-md" href="#" onclick="window.close();"><i class="glyphicon glyphicon-off"></i>关闭</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {

        });
        function Add() {
            var IpAddress = $("#txtIpAddress").val();
            var data = { IpAddress: IpAddress, Param: '@ViewBag.Paras', };
            AjaxSubmit("/Account/UpdateIpAddress", data, callBack, "add");
        }
        function HuanYuan() {
            var data = { IpAddress: "", Param: '@ViewBag.Paras', };
            AjaxSubmit("/Account/UpdateIpAddress", data, callBack, "huanyuan");
        }
        //回调函数
        function callBack(jsonData, fname) {
            if (fname == "add") {
                alert(jsonData.Msg);
                window.close();
            }
            if (fname == "huanyuan") {
                alert("还原成功，重新登录游戏生效");
                window.close();
            }
        }
    </script>
</body>
</html>
