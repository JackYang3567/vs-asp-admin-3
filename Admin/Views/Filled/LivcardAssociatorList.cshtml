@{
    Layout = null;
    ViewBag.Title = "充值系统 - 实卡列表";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" /> 
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
    <script src="~/Scripts/pagination.js"></script> 
</head>
<body>
    <div id="content" class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">

                        <!--查询栏开始-->
                        <div class="alert alert-info">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <ul class="list-inline cursor-style">
                                        <li>快速查询：</li>
                                        <li>
                                            <a id="btnUsed" class="btn btn-info search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>已使用</a>
                                        </li>
                                        <li>
                                            <a id="btnUnUsed" class="btn btn-info search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>未使用</a>
                                        </li>

                                        <li>
                                            <a id="btnDisable" class="btn btn-info search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>已禁用</a>
                                        </li>
                                        <li>
                                            <a id="btnEnable" class="btn btn-info search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>未禁用</a>
                                        </li>
                                        <li>
                                            <a id="all" class="btn btn-info search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>全部</a>
                                        </li>
                                    </ul>
                                </li>

                            </ul>
                        </div>
                        <!--查询栏结束-->
                        <div class="row">
                            <div class="col-sm-3 col-md-2">
                                <div id="DataTables_Table_0_length" class="dataTables_length">
                                    <label>
                                        <select size="1" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" id="pagecount">
                                            <option value="10" selected="selected">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> 条/页
                                    </label>
                                    <div class="dataTables_info" id="DataTables_Table_0_info">显示 1 至 10 共 10 条</div>
                                </div>
                            </div>
                            <div class="col-sm-9 col-md-10" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <div class="btn-group btn-group">                                  
                                    <button type="button" id="btnDisable" class="btn btn-warning" onclick="Do(0);"><i class="glyphicon glyphicon-minus-sign icon-white"></i>禁用</button>
                                    <button type="button" id="btnEnable" class="btn btn-primary" onclick="Do(1);"><i class="glyphicon glyphicon-ok-sign icon-white"></i>启用</button>
                                    <button type="button" id="btnSetting" class="btn btn-success" onclick="EditManager()"><i class="glyphicon glyphicon-export icon-white"></i>批量修改</button>
                                    <button type="button" class="btn btn-danger" onclick="window.close()"><i class="glyphicon glyphicon-trash icon-white"></i>关闭</button>
                                </div>

                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">

                                        <th>
                                            <input name="ckall" type="checkbox" value="" onclick="SelectAll(this,'cid')" />
                                        </th>
                                        <th>卡号</th>
                                        <th>实卡名称</th>
                                        <th>实卡价格</th>
                                        <th>赠送游戏豆</th>
                                        <th>有效期限</th>
                                        <th>充值日期</th>
                                        <th>使用范围</th>
                                        <th>销售商</th>
                                        <th>禁用状态</th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">
                                    <div class="dataTables_paginate paging_bootstrap pagination" style="float:right;">
                                        <ul class="pagination" id="pagin"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    var pageObj = {};
    var postData = {};//搜索条件
    $(document).ready(function () {
        docReady();
    });
    function docReady() {
        //加载数据
        postData.pageSize = parseInt($("#pagecount").val());
        postData.Sort = "";
        postData.BuildID = parseInt('@ViewBag.param');
        postData.OpType = 0;
        postData.pageIndex = 1;
        AjaxSearch(postData);
        //收放事件
        $('.btn-minimize').click(function (e) {
            e.preventDefault();
            var $target = $(this).parent().parent().next('.box-content');
            if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
            else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
            $target.slideToggle();
        });
        //选择页码
        $("#pagecount").change(function (e) {
            postData.pageSize = parseInt($(this).val());
            postData.pageIndex = 1;
            AjaxSearch(postData);
        });
        //已使用
        $("#btnUsed").click(function (e) {
            e.preventDefault();
            postData.pageIndex = 1;
            postData.OpType = 1;
            AjaxSearch(postData);
        });
        //未使用
        $("#btnUnUsed").click(function (e) {
            e.preventDefault();
            postData.pageIndex = 1;
            postData.OpType = 2;
            AjaxSearch(postData);
        });
        //已禁用
        $("#btnDisable").click(function (e) {
            e.preventDefault();
            postData.pageIndex = 1;
            postData.OpType = 3;
            AjaxSearch(postData);
        });
        //未禁用
        $("#btnEnable").click(function (e) {
            e.preventDefault();
            postData.pageIndex = 1;
            postData.OpType = 4;
            AjaxSearch(postData);
        });
        //未禁用
        $("#all").click(function (e) {
            e.preventDefault();
            postData.pageIndex = 1;
            postData.OpType = 0;
            AjaxSearch(postData);
        });
    }
    //搜索事件
    function AjaxSearch(postData) {
        $('#pagin').paging("/Filled/GetLivcardAssociatorList", postData, CreatTableBody, postData.pageIndex);
    }
    function Do(t) {
        var cid = GetSelectValues();
        if (cid == "") {
            alert("未选中任何数据");
            return false;
        } else {
            if (confirm("你确定要此操作吗？")) {
                var data = { cid: cid, opt: t };
                AjaxSubmit("/Filled/DoLivcardAssociator", data, callBack, "add");
            }
        }  
    }
    //
    function EditManager() {
        var cid = GetSelectValues();
       
        if (cid == "") {
            alert("未选中任何数据");
            return false;
        }
        openWindowOwn('@Url.Action("LivcardEdit","Filled")?buildid=@ViewBag.param&param=' + cid, '_LivcardEdit', 600, 300);
    }
    //回调函数
    function callBack(jsonData, fname) {
        switch (fname) {
            case "add":
                alert(jsonData.Msg);
                window.location.reload();              
                break;
        }
    }
    function StrToDateTime(timestr) {
        var dt = new Date(timestr.replace("-", "/").replace("-", "/"));
        return dt;
    }
    //绑定数据
    function CreatTableBody(jsondata, pageTotal, pageCount, pageIndex,msg) {
        var html = "";
        if (jsondata != null && jsondata.length > 0) {
            $.each(jsondata, function (i, item) {
                if (i % 2 == 0) {
                    html += stringFormat("<tr>");
                    html += stringFormat("<td><input name='cid' type='checkbox' value='{0}'/></td>", item.CardID);
                    html += stringFormat("<td><a href=\"javascript:void(0)\" onclick=\"javascript:openWindow('@Url.Action("LivcardAssociatorInfo","Filled")?param={0}',700,500)\" class=\"l\">{0}</a></td>", item.SerialID);
                    html += stringFormat("<td>{0}</td>", item.CardTypeName);
                    html += stringFormat("<td>{0}</td>", item.CardPrice);
                    html += stringFormat("<td>{0}</td>", item.Currency);
                    html += stringFormat("<td>{0}</td>", item.ValidDate);
                    html += stringFormat("<td>{0}</td>", item.ApplyDate);
                    html += stringFormat("<td>{0}</td>", item.UserRange);
                    html += stringFormat("<td>{0}</td>", item.SalesPerson);
                   
                    html += stringFormat("<td>{0}</td>", item.NullityStatus);
                    html += "</tr>";
                    } else {
                    html += stringFormat("<tr>");
                    html += stringFormat("<td><input name='cid' type='checkbox' value='{0}'/></td>", item.CardID);
                    html += stringFormat("<td><a href=\"javascript:void(0)\" onclick=\"javascript:openWindow('@Url.Action("LivcardAssociatorInfo","Filled")?param={0}',700,500)\" class=\"l\">{0}</a></td>", item.SerialID);
                    html += stringFormat("<td>{0}</td>", item.CardTypeName);
                    html += stringFormat("<td>{0}</td>", item.CardPrice);
                    html += stringFormat("<td>{0}</td>", item.Currency);
                    html += stringFormat("<td>{0}</td>", item.ValidDate);
                    html += stringFormat("<td>{0}</td>", item.ApplyDate);
                    html += stringFormat("<td>{0}</td>", item.UserRange);
                    html += stringFormat("<td>{0}</td>", item.SalesPerson);
                    
                    html += stringFormat("<td>{0}</td>", item.NullityStatus);
                    html += "</tr>";
                }
            });
        }
        if (msg != null || msg != "") {
            html += "<tr><td colspan=\"12\" style=\"height: 30px; font-size: 12px\" align=\"left\"><lable>" + msg.amount + "," + msg.gold + "," + msg.useNumber + "," + msg.notUserNumber + "," + msg.pastdueNumber + "," + msg.outNumber + "," + msg.actNumber + "</lable></td></tr>";
        }
        $("#DataTables_Table_0_wrapper tbody").html(html);
        $("#DataTables_Table_0_info").html(stringFormat("显示 {0} 至 {1} 共 {2} 条", ((pageIndex - 1) * postData.pageSize + 1), ((pageIndex * postData.pageSize) < pageTotal ? (pageIndex * postData.pageSize) : pageTotal), pageTotal));
    }
    //字符串格式化
    function stringFormat() {
        if (arguments.length == 0)
            return null;
        var str = arguments[0];
        for (var i = 1; i < arguments.length; i++) {
            var re = new RegExp('\\{' + (i - 1) + '\\}', 'gm');
            str = str.replace(re, arguments[i]);
        }
        return str;
    }
</script>
</body>
</html>
