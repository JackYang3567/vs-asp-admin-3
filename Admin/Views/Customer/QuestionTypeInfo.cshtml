@{
    Layout = null;
    ViewBag.Title = "客服中心 - 添加问题类型";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
    <script src="~/Content/laydate/laydate.js"></script>
</head>
<body>
    <div id="content" class="main-content">
        <div class="">
            <div class="carousel box-inner">
                <div class="box-header well clearfix" data-original-title="">
                    <h2><i class="glyphicon glyphicon-hand-right"></i>目前操作功能：@ViewBag.Title</h2>
                </div>
                <div class="tab-content" style="margin-top:0px">
                    <div class="panel panel-primary" style="margin-left:-10px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">添加问题类型</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">ID：</div>
                                <div class="col-xs-6 col-md-3"><input id="txtId" style="width:150px;display:inline;" class="form-control input-sm" type="text" ></div>
                                <div class="col-xs-4 col-md-2" style="text-align:left"></div>
                            </div>
                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                <div class="col-xs-2 col-md-1" style="text-align:right">类型名称：</div>
                                <div class="col-xs-6 col-md-3"><input id="txtTypeName" style="width:150px;display:inline;" class="form-control input-sm" type="text"></div>
                                <div class="col-xs-4 col-md-2" style="text-align:left"></div>
                            </div>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <ul class="list-inline">
                                    <li><a class="btn btn-primary search btn-md" href="@Url.Action("QuestionType", "Customer")"><i class="glyphicon glyphicon-circle-arrow-left"></i>返回</a></li>
                                    <li><a class="btn btn-success search btn-md" href="#" onclick="add();"><i class="glyphicon glyphicon-send"></i>保存</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script type="text/javascript">
        function add() {
            var name = $('#txtTypeName').val();
            var id = $('#txtId').val();
            if (id == "") {
                alert("ID不能为空");
                return false;
            }
            if (isNaN(id)) {
                alert("排序类型错误");
                return false;
            }
            if (name == "") {
                alert("名称不能为空");
                return false;
            }
            var data = { ID: id, TypeName: name, Mode: 'add',TypeID:@(string.IsNullOrEmpty(Request["type"]) ? "0" : Request["type"]) };
            AjaxSubmit("/Customer/DoQuestionTypeInfo", data, callBack, "add");
        }
        function callBack(jsonData, fname) {
            switch (fname) {
                case "add":
                    alert(jsonData.Msg);
                    window.location.href = "/Customer/QuestionType?type=@Request["type"]"
                    break;
            }
        }
    </script>
</body>
</html>
