@{
    Layout = null;
    ViewBag.Title = "下级游戏记录 - 代理系统";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
    <script src="~/Content/laydate/laydate.js"></script>
    <script src="~/Scripts/pagination.js"></script>
</head>
<body class="backgroud">
    <div id="content" class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">

                        <!--查询栏开始-->
                        <div class="alert alert-info">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <ul class="list-inline cursor-style">
                                        <li>日期查询：</li>
                                        <li>
                                            <input id="txtStartDate" class="input-width-150" type="text" readonly="readonly" placeholder="请输入开始时间" />至<input type="text" id="txtEndDate" class="input-width-150" readonly="readonly" placeholder="请输入结束时间" />
                                        </li>
                                        <li>所在房间：</li>
                                        <li>
                                            <select name="ddlRoom" id="ddlRoom" class="form-control input-sm input-width-150"></select>
                                        </li>
                                        <li>
                                            用户查询：
                                        </li>
                                        <li>
                                            <input type="text" id="txtSearch" class="form-control input-sm input-width-150" placeholder="请输入用户"/>
                                        </li>
                                        <li>
                                            <select id="ddlSearchType" class="form-control input-sm">
                                                <option value="1">按用户帐号</option>
                                                <option value="2">按游戏ID</option>
                                            </select>
                                        </li>
                                        <li>
                                            <a id="btnQuery" class="btn btn-success search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>查询</a>
                                        </li>
                                    </ul>
                                </li>

                            </ul>
                        </div>
                        <!--查询栏结束-->
                        <div class="row">
                            <div class="col-md-2">
                                <div id="DataTables_Table_0_length" class="dataTables_length">
                                    <label>
                                        <select size="1" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" id="pagecount">
                                            <option value="10" selected="selected">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> 条/页
                                    </label>
                                    <div class="dataTables_info" id="DataTables_Table_0_info">显示 1 至 10 共 10 条</div>
                                </div>
                            </div>
                            <div class="col-md-10" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <div class="btn-group btn-group">
                                    <button type="button" id="btnQueryTD" class="btn btn-primary"><i class="glyphicon glyphicon-align-left icon-white"></i>今天</button>
                                    <button type="button" id="btnQueryYD" class="btn btn-primary"><i class="glyphicon glyphicon-align-center icon-white"></i>昨天</button>
                                    <button type="button" id="btnQueryTW" class="btn btn-primary"><i class="glyphicon glyphicon-align-right icon-white"></i>本周</button>
                                    <button type="button" id="btnQueryYW" class="btn btn-primary"><i class="glyphicon glyphicon-align-justify icon-white"></i>上周</button>
                                    <button type="button" id="btnQueryTM" class="btn btn-primary"><i class="glyphicon glyphicon-indent-left icon-white"></i>本月</button>
                                    <button type="button" id="btnQueryYM" class="btn btn-primary"><i class="glyphicon glyphicon-indent-right icon-white"></i>上月</button>
                                </div>
                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th>游戏</th>
                                        <th>房间</th>
                                        <th>帐号</th>
                                        <th>游戏ID</th>
                                        <th>输赢金币</th>
                                        <th>税收</th>
                                        <th>游戏时长</th>
                                        <th>游戏时间</th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">
                                    <div class="dataTables_paginate paging_bootstrap pagination" style="float:right;">
                                        <ul class="pagination" id="pagin"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var pageObj = {};
        var postData = {};//搜索条件
        $(document).ready(function () {
            //时间选择器
            laydate.render({
                elem: '#txtStartDate'
              , type: 'datetime'
            });
            laydate.render({
                elem: '#txtEndDate'
              , type: 'datetime'
            });

            var agent = '@Request["agent"]';
            if (agent != "") {
                $("#txtSearch").val(agent);
                $("#ddlSearchType").val(5);
            }
            getGameList();
            docReady();
        });
        function docReady() {
            //加载数据
            postData.pageSize = parseInt($("#pagecount").val());
            postData.Type = 1;
            postData.pageIndex = 1;
            postData.KeyWord = $("#txtSearch").val();
            postData.SearchType = $("#ddlSearchType").val();
            postData.agentId = '@Request["agentId"]';
            AjaxSearch(postData);
            //收放事件
            $('.btn-minimize').click(function (e) {
                e.preventDefault();
                var $target = $(this).parent().parent().next('.box-content');
                if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                $target.slideToggle();
            });
            //选择页码
            $("#pagecount").change(function (e) {
                postData.pageSize = parseInt($(this).val());
                postData.pageIndex = 1;
                AjaxSearch(postData);
            });

            //普通搜索事件
            $("#btnQuery").click(function (e) {

                postData.pageSize = parseInt($("#pagecount").val());
                postData.Type = 1;
                var txtStartDate = $("#txtStartDate").val();
                var txtEndDate = $("#txtEndDate").val();
                if (txtStartDate != "" && txtEndDate != "") {
                    if (StrToDateTime(txtEndDate) < StrToDateTime(txtStartDate)) {
                        alert("开始日期不能大于结束时间");
                        return false;
                    }
                }
                postData.StartDate = txtStartDate;
                postData.EndDate = txtEndDate;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ServerID = parseInt($("#ddlRoom").val());
                postData.KeyWord = $("#txtSearch").val();
                postData.SearchType = $("#ddlSearchType").val();
                AjaxSearch(postData);
            });
            //今天查询
            $("#btnQueryTD").click(function (e) {
                postData.Type = 2;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
            //昨天查询
            $("#btnQueryYD").click(function (e) {
                postData.Type = 3;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
            //本周查询
            $("#btnQueryTW").click(function (e) {
                postData.Type = 4;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
            //上周查询
            $("#btnQueryYW").click(function (e) {
                postData.Type = 5;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
            //本月查询
            $("#btnQueryTM").click(function (e) {
                postData.Type = 6;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
            //上月查询
            $("#btnQueryYM").click(function (e) {
                postData.Type = 7;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                AjaxSearch(postData);
            });
        }
        //搜索事件
        function AjaxSearch(postData) {
            $('#pagin').paging("/Daili/GetNextGameList", postData, CreatTableBody, postData.pageIndex);
        }
        function StrToDateTime(timestr) {
            var dt = new Date(timestr.replace("-", "/").replace("-", "/"));
            return dt;
        }
        //绑定数据
        function CreatTableBody(jsondata, pageTotal, pageCount, pageIndex, msg) {
            var html = "";
            if (jsondata != null && jsondata.length > 0) {
                $.each(jsondata, function (i, item) {
                    html += stringFormat("<tr>");
                    html += stringFormat("<td>{0}</td>",gameList[item.KindID]);
                    html += stringFormat("<td>{0}</td>",roomList[item.ServerID]);
                    html += stringFormat("<td>{0}</td>", item.GameID);
                    html += stringFormat("<td><a class=\"l\" href=\"javascript:void(0);\" onclick=\"openWindowOwn('@Url.Action("AccountsInfo", "Account")?param={1}','{1}',850,600);\">{0}</a></td>", item.Accounts, item.UserID);
                    html += stringFormat("<td>{0}</td>", item.Score);
                    html += stringFormat("<td>{0}</td>", item.Revenue);
                    html += stringFormat("<td>{0}</td>", item.PlayTimeCount);
                    html += stringFormat("<td>{0}</td>", item.InsertTime);
                    html += "</tr>";
                });
            }
            if (msg != null) {
                html += stringFormat("<tr><td colspan=\"4\">合计：</td><td>{0}</td><td>{1}</td><td colspan=\"2\"></td></tr>", typeof (msg.SumWinScore) == "undefined" ? "0.00" : msg.SumWinScore, typeof (msg.SumRevenue) == "undefined" ? "0.00" : msg.SumRevenue);
            }
            $("#DataTables_Table_0_wrapper tbody").html(html);
            $("#DataTables_Table_0_info").html(stringFormat("显示 {0} 至 {1} 共 {2} 条", ((pageIndex - 1) * postData.pageSize + 1), ((pageIndex * postData.pageSize) < pageTotal ? (pageIndex * postData.pageSize) : pageTotal), pageTotal));
        }
        //字符串格式化
        function stringFormat() {
            if (arguments.length == 0)
                return null;
            var str = arguments[0];
            for (var i = 1; i < arguments.length; i++) {
                var re = new RegExp('\\{' + (i - 1) + '\\}', 'gm');
                str = str.replace(re, arguments[i]);
            }
            return str;
        }
        var roomList = new Array(), gameList = new Array()
        function getGameList() {
            $.ajaxSetup({ async: false })
            $.post("/Account/GetGameList", {}, function (data) {
                var optHTML = new String();
                var data = $.parseJSON(data);
                $.each(data, function () {
                    //optHTML += "<option value='" + this.KindID + "'>" + this.KindName + "</option>";
                    gameList[this.KindID] = this.KindName
                });
            })

            $.post("/Android/RoomList", { kid: 0 }, function (data) {
                var roomJson = $.parseJSON(data);
                var optHTML = "";
                $.each(roomJson, function () {
                    roomList[this.ServerID] = this.ServerName
                    optHTML += "<option value='" + this.ServerID + "'>" + this.ServerName + "</option>";
                });
                $("#ddlRoom").append("<option value='0'>全部</option>" + optHTML);
            })
        }
    </script>
</body>
</html>
