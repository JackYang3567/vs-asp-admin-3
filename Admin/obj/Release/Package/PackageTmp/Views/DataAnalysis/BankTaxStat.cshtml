@{
    Layout = null;
    ViewBag.Title = "数据分析 - 保险柜税收统计";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/laydate/laydate.js"></script>
    <script src="~/Scripts/comm.js"></script> 
</head>
<body>
    <div id="content" class="main-content">
        <div class="carousel box-inner">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">保险柜税收日统计图</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <ul class="list-inline cursor-style">
                                        <li>统计每日保险柜税收：
                                            <input id="txtStartDate" class="input-width-150" type="text" readonly="readonly" value="@ViewBag.StartTime" />至<input type="text" id="txtEndDate" class="input-width-150" readonly="readonly" value="@ViewBag.EndTime" />
                                        </li>
                                        <li><select id="ddlType"><option value="0">曲线图</option><option value="1">柱状图</option></select></li>
                                        <li>
                                            <a class="btn btn-success search" href="#" id="btnquery"><i class="glyphicon glyphicon-zoom-in icon-white"></i>查询</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="row">
                                    <img id="pic" src="@Url.Action("DayBankTaxStatChart", new { startDate = ViewBag.StartTime, endDate = ViewBag.EndTime, type = 0 })" />
                                </div>
                                <div class="row">
                                    <div class="col-md-10" id="dt">

                                    </div>
                                </div>
                            </div>
                            <div class="panel-heading">
                                <h3 class="panel-title">保险柜税收月统计图</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <img id="pic2" src="@Url.Action("MonthBankTaxStatChart", new { })" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var data = {};
        $(document).ready(function () {
            //时间选择器
            laydate.render({
                elem: '#txtStartDate'
            });
            laydate.render({
                elem: '#txtEndDate'
            });
            docReady();
        });
        function docReady() {
            var startDate = $("#txtStartDate").val();
            var endDate = $("#txtEndDate").val();
            if (startDate == "" || endDate == "") {
                alert("请选择时间");
                return false;
            }
            data.startDate = startDate;
            data.endDate = endDate;
            data.type = parseInt($("#ddlType").val());
            add(0);
            //收放事件
            $('.btn-minimize').click(function (e) {
                e.preventDefault();
                var $target = $(this).parent().parent().next('.box-content');
                if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                $target.slideToggle();
            });
            $("#btnquery").click(function (e) {
                e.preventDefault();
                var startDate = $("#txtStartDate").val();
                var endDate = $("#txtEndDate").val();
                if (startDate == "" || endDate == "") {
                    alert("请选择时间");
                    return false;
                }
                data.startDate = startDate;
                data.endDate = endDate;
                data.type = parseInt($("#ddlType").val());
                add(1);
            });         
        }
        function add(o) {
            if (o > 0) {
                $("#pic").attr("src", "@Url.Action("DayBankTaxStatChart", "DataAnalysis")?startDate=" + data.startDate + "&endDate=" + data.endDate + "&type=" + data.type + "&t=" + Math.random());
            }
            AjaxSubmit("/DataAnalysis/GetBankTaxStat", data, callBack, "del");
        }
        //回调函数
        function callBack(jsonData, fname) {
            switch (fname) {
                case "del":
                    var html = "<table class=\"table table-striped table-bordered bootstrap-datatable datatable responsive dataTable\">";
                    html += "<thead><tr role=\"row\">";
                    var len = jsonData.length;
                    var rows = (len / 7) + 1;
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "<th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">统计时间</th><th class=\"sorting\" role=\"columnheader\" rowspan=\"1\" colspan=\"1\">保险柜税收</th>";
                    html += "</thead></tr>";
                    html += "<tbody role=\"alert\">";
                    for (var i = 1; i < rows; i++) {
                        html += "<tr>";
                        for (var j = (i - 1) * 7; j < i * 7; j++) {
                            if (jsonData[j] != null && typeof (jsonData[j]) != "undefined") {
                                html += "<td>" + jsonData[j].key + "</td><td>" + jsonData[j].vaule + "</td>";
                            } else {
                                html += "<td></td><td></td>"
                            }
                        }
                        html += "</tr>";
                    }
                    html += "</tbody></table>";
                    $("#dt").html(html);
                    break;
            }
        }
    </script>
</body>
</html>
