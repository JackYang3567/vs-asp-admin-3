@{
    Layout = null;
    ViewBag.Title = "用户系统 - 转账税收【TOP100】";
    System.Data.DataTable dt = ViewData["data"] == null ? null : ViewData["data"] as System.Data.DataTable;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
   
</head>
<body>
    <div id="content" class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">
                        <!--查询栏结束-->
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <div id="DataTables_Table_0_length" class="dataTables_length">
                                   
                                </div>
                            </div>
                            <div class="col-xs-6 col-md-3" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <a class="btn btn-success search" href="#" onclick="window.close();">
                                    <i class="glyphicon glyphicon-off"></i>
                                    关闭
                                </a>
                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th>排名</th>
                                        <th>转账人帐号</th>
                                        <th>发起转账次数</th>
                                        <th>转账税收</th>
                                        <th>转出总金额</th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all">
                                    @if (dt != null && dt.Rows.Count > 0) {
                                        for (int i = 0; i < dt.Rows.Count;i++ ) {
                                            if (i % 2 == 0) { 
                                               <tr class="odd">
                                                   <td>@i+1</td>
                                                   <td>@Game.Facade.Tools.TypeUtil.ObjectToString(dt.Rows[i]["Accounts"])</td>
                                                   <td>@Game.Facade.Tools.TypeUtil.ObjectToString(dt.Rows[i]["Counts"])</td>
                                                   <td>@Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[i]["Revenue"]).ToString("NO")</td>
                                                   <td>@Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[i]["SourceGold"]).ToString("NO")</td>
                                               </tr>
                                            } else { 
                                             <tr class="even">
                                                 <td>@i+1</td>
                                                 <td>@Game.Facade.Tools.TypeUtil.ObjectToString(dt.Rows[i]["Accounts"])</td>
                                                 <td>@Game.Facade.Tools.TypeUtil.ObjectToString(dt.Rows[i]["Counts"])</td>
                                                 <td>@Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[i]["Revenue"]).ToString("NO")</td>
                                                 <td>@Game.Facade.Tools.TypeUtil.ObjectToLong(dt.Rows[i]["SourceGold"]).ToString("NO")</td>
                                               </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">
                                   
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
