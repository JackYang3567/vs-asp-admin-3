@{
    Layout = null;
    ViewBag.Title = "充值系统 - 充值记录";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
    <script src="~/Content/laydate/laydate.js"></script>
    <script src="~/Scripts/pagination.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head>
<body class="backgroud">
    <div id="content" class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">

                        <!--查询栏开始-->
                        <div class="alert alert-info">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <ul class="list-inline cursor-style">
                                        <li>日期查询：</li>
                                        <li>
                                            <input id="txtStartDate" class="input-width-150" type="text" readonly="readonly" placeholder="请输入开始时间" value="@DateTime.Now.ToString("yyyy-MM-dd") 00:00:00" />至<input type="text" id="txtEndDate" class="input-width-150" readonly="readonly" placeholder="请输入结束时间" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd") 00:00:00" />
                                        </li>
                                        <li>@Html.HtmlGlobalShareInfoSelectBuilder()</li>

                                        <li>
                                            用户查询：
                                        </li>
                                        <li>
                                            <input type="text" id="txtSearch" class="form-control input-sm input-width-150" placeholder="请输入用户/推广人/代理人查询" value="@Request["account"]" />
                                        </li>
                                        <li>
                                            <select id="ddlSearchType" class="form-control input-sm">
                                                <option value="1">按用户帐号</option>
                                                <option value="2">按游戏ID</option>
                                                <option value="3">按订单号</option>
                                                <option value="4">按推广人</option>
                                                <option value="5">按代理人</option>
                                            </select>
                                        </li>
                                        <li>
                                            <a id="btnQuery" class="btn btn-success search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>查询</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <!--查询栏结束-->
                        <div class="row">
                            <div class="col-md-2">
                                <div id="DataTables_Table_0_length" class="dataTables_length">
                                    <label>
                                        <select size="1" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" id="pagecount">
                                            <option value="10" selected="selected">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> 条/页
                                    </label>
                                    <div class="dataTables_info" id="DataTables_Table_0_info">显示 1 至 10 共 10 条</div>
                                </div>
                            </div>
                            <div class="col-md-10" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <div class="btn-group btn-group">
                                    <button type="button" id="btnQueryTD" class="btn btn-primary"><i class="glyphicon glyphicon-align-left icon-white"></i>今天</button>
                                    <button type="button" id="btnQueryYD" class="btn btn-primary"><i class="glyphicon glyphicon-align-center icon-white"></i>昨天</button>
                                    <button type="button" id="btnQueryTW" class="btn btn-primary"><i class="glyphicon glyphicon-align-right icon-white"></i>本周</button>
                                    <button type="button" id="btnQueryYW" class="btn btn-primary"><i class="glyphicon glyphicon-align-justify icon-white"></i>上周</button>
                                    <button type="button" id="btnQueryTM" class="btn btn-primary"><i class="glyphicon glyphicon-indent-left icon-white"></i>本月</button>
                                    <button type="button" id="btnQueryYM" class="btn btn-primary"><i class="glyphicon glyphicon-indent-right icon-white"></i>上月</button>
                                </div>
                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th>下注记录</th>
                                        <th>充值时间</th>
                                        <th>服务类型</th>
                                        <th>用户帐号</th>
                                        <th>充值代理账号</th>
                                        <th>代理人</th>
                                        <th>推广人</th>
                                        <th>游戏ID</th>
                                        @*<th>充值卡号</th>*@
                                        <th>订单号码</th>
                                        <th>订单金额</th>
                                        <th>实付金额</th>
                                        @*<th>卡名称</th>*@
                                        <th>充值金币</th>
                                        <th>充值前金币</th>
                                        <th>充值地址</th>
                                        @*<th>操作用户</th>*@
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6">
                                    <div class="dataTables_paginate paging_bootstrap pagination" style="float:right;">
                                        <ul class="pagination" id="pagin"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        查看明细
                    </h4>
                </div>
                <div class="modal-body">
                    <iframe  id="iframedetail" style="border:0px;"></iframe>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        关闭
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
    <script type="text/javascript">
        var pageObj = {};
        var postData = {};//搜索条件
        $(document).ready(function () {
            //时间选择器
            laydate.render({
                elem: '#txtStartDate'
              , type: 'datetime'
            });
            laydate.render({
                elem: '#txtEndDate'
              , type: 'datetime'
            });

            var agent = '@Request["agent"]';
            if (agent != "") {
                $("#txtSearch").val(agent);
                $("#ddlSearchType").val(5);
            }
            docReady();
        });
        function docReady() {
            //加载数据
            postData.pageSize = parseInt($("#pagecount").val());
            postData.Sort = "";
            postData.Type = 1;
            postData.pageIndex = 1;
            postData.KeyWord = $("#txtSearch").val();
            postData.SearchType = $("#ddlSearchType").val();
            var txtStartDate = $("#txtStartDate").val();
            var txtEndDate = $("#txtEndDate").val();
            postData.StartDate = txtStartDate;
            postData.EndDate = txtEndDate;
            AjaxSearch(postData);
            //收放事件
            $('.btn-minimize').click(function (e) {
                e.preventDefault();
                var $target = $(this).parent().parent().next('.box-content');
                if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                $target.slideToggle();
            });
            //选择页码
            $("#pagecount").change(function (e) {
                postData.pageSize = parseInt($(this).val());
                postData.pageIndex = 1;
                AjaxSearch(postData);
            });

            //普通搜索事件
            $("#btnQuery").click(function (e) {

                postData.pageSize = parseInt($("#pagecount").val());
                postData.Type = 1;
                var txtStartDate = $("#txtStartDate").val();
                var txtEndDate = $("#txtEndDate").val();
                if (txtStartDate != "" && txtEndDate != "") {
                    if (StrToDateTime(txtEndDate) < StrToDateTime(txtStartDate)) {
                        alert("开始日期不能大于结束时间");
                        return false;
                    }
                }
                postData.StartDate = txtStartDate;
                postData.EndDate = txtEndDate;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                postData.KeyWord = $("#txtSearch").val();
                postData.SearchType = $("#ddlSearchType").val();
                postData.pageIndex = 1;
                AjaxSearch(postData);
            });
            //今天查询
            $("#btnQueryTD").click(function (e) {
                postData.Type = 2;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
            //昨天查询
            $("#btnQueryYD").click(function (e) {
                postData.Type = 3;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
            //本周查询
            $("#btnQueryTW").click(function (e) {
                postData.Type = 4;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
            //上周查询
            $("#btnQueryYW").click(function (e) {
                postData.Type = 5;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
            //本月查询
            $("#btnQueryTM").click(function (e) {
                postData.Type = 6;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
            //上月查询
            $("#btnQueryYM").click(function (e) {
                postData.Type = 7;
                //postData.CardTypeID = parseInt($("#ddlCardType").val());
                postData.ShareID = parseInt($("#ddlGlobalShareInfo").val());
                AjaxSearch(postData);
            });
        }
        //搜索事件
        function AjaxSearch(postData) {
            $('#pagin').paging("/Filled/GetShareInfoList", postData, CreatTableBody, postData.pageIndex);
        }
        function StrToDateTime(timestr) {
            var dt = new Date(timestr.replace("-", "/").replace("-", "/"));
            return dt;
        }
        function view(gameid, applydate) {
            if (gameid) {
                var applydate = applydate.replace("T", " ");
                var applydate = applydate.substring(0, applydate.indexOf("."));
                
                $("#iframedetail").attr("src", "/Trade/LotteryBetDraw?gameid=" + gameid + "&StartDate=" + applydate);
               // alert($(window).width());
                $("#iframedetail").width($(window).width() - 80);
                $("#iframedetail").height($(window).height()-240);
                $(".modal-dialog").width($(window).width()-50);
                $(".modal-dialog").height($(window).height()-220);
                $('#myModal').modal('show'); 
            }
        }
        //绑定数据
        function CreatTableBody(jsondata, pageTotal, pageCount, pageIndex, msg) {
            var html = "";
            if (jsondata != null && jsondata.length > 0) {
                $.each(jsondata, function (i, item) {
                    html += stringFormat("<tr class=\"odd\">");
                    html += stringFormat("<td onclick='view({0},\"{1}\")'>查看</td>", item.GameID, item.ApplyDate);
                    html += stringFormat("<td>{0}</td>", item.ApplyDate);
                    html += stringFormat("<td>{0}</td>", item.ShareName);
                    html += stringFormat("<td>{0}</td>", G_AddUserNameLink(item.Accounts, item.UserID, item.UserType));
                    html += stringFormat("<td>{0}</td>", item.rechargeaccount);
                    html += stringFormat("<td>{0}</td>", item.AgentAcc);
                    html += stringFormat("<td>{0}</td>", item.Spreader);
                    html += stringFormat("<td>{0}</td>", item.GameID);
                    //html += stringFormat("<td>{0}</td>", item.SerialID);
                    html += stringFormat("<td>{0}</td>", item.OrderID);
                    html += stringFormat("<td>{0}</td>", item.OrderAmount);
                    html += stringFormat("<td>{0}</td>", item.PayAmount);
                    //html += stringFormat("<td>{0}</td>", item.CardTypeName);
                    html += stringFormat("<td>{0}</td>", item.Gold);
                    html += stringFormat("<td>{0}</td>", item.BeforeGold);
                    html += stringFormat("<td title=\"{0}\">{1}</td>", item.IPAddress, item.IPAddress);
                    //html += stringFormat("<td>{0}</td>", item.Account);
                    html += "</tr>";
                });
            }
            if (msg != null) {
                html += stringFormat("<tr><td colspan=\"8\">合计：</td><td><lable id=\"ltOrderAmounts\">{0}</lable></td><td><lable id=\"ltPayAmounts\">{1}</lable></td><td><lable id=\"ltGrantCurrency\">{2}</lable></td><td colspan=\"3\"></td></tr>", typeof (msg.OrderAmount) == "undefined" ? "0.00" : msg.OrderAmount, typeof (msg.PayAmount) == "undefined" ? "0.00" : msg.PayAmount, typeof (msg.Currency) == "undefined" ? "0.00" : msg.Currency);
            }
            $("#DataTables_Table_0_wrapper tbody").html(html);
            $("#DataTables_Table_0_info").html(stringFormat("显示 {0} 至 {1} 共 {2} 条", ((pageIndex - 1) * postData.pageSize + 1), ((pageIndex * postData.pageSize) < pageTotal ? (pageIndex * postData.pageSize) : pageTotal), pageTotal));
        }
        //字符串格式化
        function stringFormat() {
            if (arguments.length == 0)
                return null;
            var str = arguments[0];
            for (var i = 1; i < arguments.length; i++) {
                var re = new RegExp('\\{' + (i - 1) + '\\}', 'gm');
                str = str.replace(re, arguments[i]);
            }
            return str;
        }
    </script>
</body>
</html>