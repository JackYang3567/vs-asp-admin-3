@{
    Layout = null;
    ViewBag.Title = "充值系统 - 苹果管理";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/css/bootstrap-cerulean.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/charisma-app.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/comm.js"></script>
    <script src="~/Content/laydate/laydate.js"></script>
    <script src="~/Scripts/pagination.js"></script> 
</head>
<body class="backgroud">
    <div id="content" class="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inner">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="glyphicon glyphicon-hand-right"></i> 你当前位置：@ViewBag.Title </h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-round btn-default" onclick="history.go(0);">
                                <i class="glyphicon glyphicon-repeat"></i>
                            </a>
                            <a href="#" class="btn btn-minimize btn-round btn-default">
                                <i class="glyphicon glyphicon-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="box-content" style="overflow: hidden; display: block;">

                        <!--查询栏开始-->
                        <div class="alert alert-info">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <ul class="list-inline cursor-style">
                                        <li>日期查询：</li>
                                        <li>
                                            <input id="txtStartDate" class="input-width-150" type="text" readonly="readonly" placeholder="请输入开始时间" />至<input type="text" id="txtEndDate" class="input-width-150" readonly="readonly" placeholder="请输入结束时间" />
                                        </li>
                                        <li>
                                            <select id="ddlStatus" class="form-control input-sm">
                                                <option value="0">全部</option>
                                                <option value="10">支付成功</option>
                                                <option value="11">支付失败</option>
                                            </select>
                                        </li>
                                        
                                        <li>
                                            <a id="btnQuery" class="btn btn-success search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>查询</a>
                                        </li>
                                        <li>
                                            订单查询：
                                        </li>
                                        <li>
                                            <input type="text" id="txtSearch" class="form-control input-sm input-width-200" placeholder="请输入订单" />
                                        </li>
                                       
                                        <li>
                                            <a id="btnQuery1" class="btn btn-success search" href="#"><i class="glyphicon glyphicon-zoom-in icon-white"></i>查询</a>
                                        </li>

                                    </ul>
                                </li>

                            </ul>
                        </div>
                        <!--查询栏结束-->
                        <div class="row">
                            <div class="col-md-2">
                                <div id="DataTables_Table_0_length" class="dataTables_length">
                                    <label>
                                        <select size="1" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" id="pagecount">
                                            <option value="10" selected="selected">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> 条/页
                                    </label>
                                    <div class="dataTables_info" id="DataTables_Table_0_info">显示 1 至 10 共 10 条</div>
                                </div>
                            </div>
                            <div class="col-md-10" style="padding-bottom:5px; padding-top:5px; text-align:right;">
                                <div class="btn-group btn-group">
                                    <button type="button" id="btnQueryTD" class="btn btn-primary"><i class="glyphicon glyphicon-align-left icon-white"></i>今天</button>
                                    <button type="button" id="btnQueryYD" class="btn btn-primary"><i class="glyphicon glyphicon-align-center icon-white"></i>昨天</button>
                                    <button type="button" id="btnQueryTW" class="btn btn-primary"><i class="glyphicon glyphicon-align-right icon-white"></i>本周</button>
                                    <button type="button" id="btnQueryYW" class="btn btn-primary"><i class="glyphicon glyphicon-align-justify icon-white"></i>上周</button>
                                </div>
                               
                            </div>
                        </div>
                        <!--table开始-->
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper table-center" role="grid">
                            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                       
                                        <th>订单日期</th>
                                        <th>订单号码</th>
                                        <th>用户帐号</th>
                                        <th>产品标识</th>
                                        <th>购买数量</th>
                                        <th>支付金额</th>
                                        <th>状态</th>
                                    </tr>
                                </thead>
                                <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                            <!--分页控件-->
                            <div class="row">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">
                                    <div class="dataTables_paginate paging_bootstrap pagination" style="float:right;">
                                        <ul class="pagination" id="pagin"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--table结束-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var pageObj = {};
        var postData = {};//搜索条件
        $(document).ready(function () {
            laydate.render({
                elem: '#txtStartDate'
              , type: 'datetime'
            });
            laydate.render({
                elem: '#txtEndDate'
              , type: 'datetime'
            });
            docReady();
        });
        function docReady() {
            //加载数据
            postData.pageSize = parseInt($("#pagecount").val());
            postData.Sort = "";
            postData.Type = 0;
            postData.pageIndex = 1;
            AjaxSearch(postData);
            //收放事件
            $('.btn-minimize').click(function (e) {
                e.preventDefault();
                var $target = $(this).parent().parent().next('.box-content');
                if ($target.is(':visible')) $('i', $(this)).removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                else $('i', $(this)).removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                $target.slideToggle();
            });
            //选择页码
            $("#pagecount").change(function (e) {
                postData.pageSize = parseInt($(this).val());
                postData.pageIndex = 1;
                AjaxSearch(postData);
            });

            //普通搜索事件
            $("#btnQuery").click(function (e) {

                postData.pageSize = parseInt($("#pagecount").val());
                postData.Type = 1;
                var txtStartDate = $("#txtStartDate").val();
                var txtEndDate = $("#txtEndDate").val();
                if (txtStartDate != "" && txtEndDate != "") {
                    if (StrToDateTime(txtEndDate) < StrToDateTime(txtStartDate)) {
                        alert("开始日期不能大于结束时间");
                        return false;
                    }
                }
                postData.StartDate = txtStartDate;
                postData.EndDate = txtEndDate;
                postData.Status = parseInt($("#ddlStatus").val());
                AjaxSearch(postData);
            });
            //今天查询
            $("#btnQueryTD").click(function (e) {
                postData.Type = 2;
                postData.Status = parseInt($("#ddlStatus").val());
                AjaxSearch(postData);
            });
            //昨天查询
            $("#btnQueryYD").click(function (e) {
                postData.Type = 3;
                postData.Status = parseInt($("#ddlStatus").val());
                AjaxSearch(postData);
            });
            //本周查询
            $("#btnQueryTW").click(function (e) {
                postData.Type = 4;
                postData.Status = parseInt($("#ddlStatus").val());
                AjaxSearch(postData);
            });
            //上周查询
            $("#btnQueryYW").click(function (e) {
                postData.Type = 5;
                postData.Status = parseInt($("#ddlStatus").val());
                AjaxSearch(postData);
            });
            //用户查询
            $("#btnQuery1").click(function (e) {
                var keyWord = $("#txtSearch").val();
                if (keyWord == "") {
                    alert("请输入查询条件");
                    return false;
                }
                var searchType = $("#ddlSearchType").val();
                postData.Type = 6;
                postData.KeyWord = keyWord;
                AjaxSearch(postData);
            });
        }
        //回调函数
        function callBack(jsonData, fname) {
            switch (fname) {
                case "del":
                    alert(jsonData.Msg);
                    window.location.reload();
                    //window.opener.location.reload();
                    break;
            }
        }
        //搜索事件
        function AjaxSearch(postData) {
            $('#pagin').paging("/Filled/GetOrderAppList", postData, CreatTableBody, postData.pageIndex);
        }
        function StrToDateTime(timestr) {
            var dt = new Date(timestr.replace("-", "/").replace("-", "/"));
            return dt;
        }
        //绑定数据
        function CreatTableBody(jsondata, pageTotal, pageCount, pageIndex) {
            var html = "";
            if (jsondata != null && jsondata.length > 0) {
                $.each(jsondata, function (i, item) {
                    if (i % 2 == 0) {
                        html += stringFormat("<tr class=\odd\">");
                        html += stringFormat("<td>{0}</td>", item.CollectDate);
                        html += stringFormat("<td><a class=\"l\" href=\"javascript:void(0);\" onclick=\"openWindowOwn('@Url.Action("OrderAppInfo", "Filled")?id={0}','{1}',850,600);\">{1}</a></td>", item.DetailID, item.OrderID);
                        html += stringFormat("<td><a class=\"l\" href=\"javascript:void(0);\" onclick=\"openWindowOwn('@Url.Action("AccountsInfo", "Account")?param={0}','{0}',850,600);\">{1}</a></td>", item.UserID, item.Accounts);
                        html += stringFormat("<td>{0}</td>", item.product_id);
                        html += stringFormat("<td>{0}</td>", item.quantity);
                        html += stringFormat("<td>{0}</td>", item.PayAmount);
                        html += stringFormat("<td>{0}</td>", (item.Status == 1 ? "<span class='lan'>成功<span>" : "<span class='hong'>失败<span>"));
                        html += "</tr>";
                    } else {
                        html += stringFormat("<tr class=\even\">");
                        html += stringFormat("<td>{0}</td>", item.CollectDate);
                        html += stringFormat("<td><a class=\"l\" href=\"javascript:void(0);\" onclick=\"openWindowOwn('@Url.Action("OrderAppInfo", "Filled")?id={0}','{1}',850,600);\">{1}</a></td>", item.DetailID, item.OrderID);
                        html += stringFormat("<td><a class=\"l\" href=\"javascript:void(0);\" onclick=\"openWindowOwn('@Url.Action("AccountsInfo", "Account")?param={0}','{0}',850,600);\">{1}</a></td>", item.UserID, item.Accounts);
                        html += stringFormat("<td>{0}</td>", item.product_id);
                        html += stringFormat("<td>{0}</td>", item.quantity);
                        html += stringFormat("<td>{0}</td>", item.PayAmount);
                        html += stringFormat("<td>{0}</td>", (item.Status == 1 ? "<span class='lan'>成功<span>" : "<span class='hong'>失败<span>"));
                        html += "</tr>";
                    }
                });
            }
            $("#DataTables_Table_0_wrapper tbody").html(html);
            $("#DataTables_Table_0_info").html(stringFormat("显示 {0} 至 {1} 共 {2} 条", ((pageIndex - 1) * postData.pageSize + 1), ((pageIndex * postData.pageSize) < pageTotal ? (pageIndex * postData.pageSize) : pageTotal), pageTotal));
        }
        //字符串格式化
        function stringFormat() {
            if (arguments.length == 0)
                return null;
            var str = arguments[0];
            for (var i = 1; i < arguments.length; i++) {
                var re = new RegExp('\\{' + (i - 1) + '\\}', 'gm');
                str = str.replace(re, arguments[i]);
            }
            return str;
        }
    </script>
</body>
</html>
